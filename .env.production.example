# Production Environment Variables for Coolify Deployment
# Copy these to your Coolify application environment variables

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Database (SQLite with threading optimizations)
DATABASE_URL=sqlite:///app/db.sqlite3

# Download Performance Settings (Optimized for Production)
MAX_GLOBAL_CONCURRENCY=48
MAX_PER_HOST_CONCURRENCY=6
DOWNLOAD_QPS=30

# Download Limits (Optimized for Large Files)
MAX_DOWNLOAD_SIZE=5368709120
MAX_FILES_PER_JOB=2000
DOWNLOAD_TIMEOUT=300
DOWNLOAD_CHUNK_SIZE=8192

# Zip Creation Limits
MAX_ZIP_SIZE=10737418240
ZIP_COMPRESSION_LEVEL=1

# Worker Configuration
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=600
GUNICORN_KEEPALIVE=10

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin