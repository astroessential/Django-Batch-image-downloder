# Django Settings - IMPORTANT: Set these in Coolify environment variables
SECRET_KEY=your-super-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database (SQLite - no additional setup needed, perfect for Coolify)
DATABASE_URL=sqlite:///db.sqlite3

# Download Configuration (adjust based on your server resources)
MAX_GLOBAL_CONCURRENCY=16
MAX_PER_HOST_CONCURRENCY=2
DOWNLOAD_QPS=10
HTTP_CONNECT_TIMEOUT=5
HTTP_READ_TIMEOUT=45
HTTP_WRITE_TIMEOUT=45
MAX_IMAGE_SIZE_MB=50

# Storage (local is recommended for Coolify deployment)
MEDIA_BACKEND=local

# Security Settings (enable when using HTTPS/SSL)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging
LOG_LEVEL=INFO

# Optional: S3 Storage (if you want to use cloud storage instead)
# MEDIA_BACKEND=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
